  {
    "name": "IDropa",
    "version": "1.0",
    "description": "Get DOM element information using this great tool! Made by developers... For developers",
    "permissions": ["tabs", "activeTab"],
    "background": {
      "scripts": ["./js/script.js"],
      "persistent": true
    },
    "content_scripts": [
	  {
	    "matches": [
	      "<all_urls>"
	    ],
	    "js": ["./js/content.js"]
	  }
	],
    "browser_action": {
        "default_icon": {                    
            "16": "icons/16x16.png",          
          	"32": "icons/32x32.png",
          	"48": "icons/48x48.png",
          	"128": "icons/128x128.png"
          },
          "default_title": "IDropa",
          "default_popup": "index.html"
        },
    "icons": {
        "16": "icons/16x16.png",          
      	"32": "icons/32x32.png",
      	"48": "icons/48x48.png",
      	"128": "icons/128x128.png"
    },
    "manifest_version": 2
  }
